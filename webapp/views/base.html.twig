<!DOCTYPE html>
<html>
<head>
    {% block head %}
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
        <meta name="description" content="">
        <meta name="author" content="">
        <link rel="icon" href="../../favicon.ico">

        <title>Automate Everything</title>

        <!-- Bootstrap core CSS -->
        <link href="/vendor/twbs/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
        <link href="/assets/css/navbar-fixed-top.css" rel="stylesheet">
        <link href="/assets/css/sticky-footer.css" rel="stylesheet">
        <script src="/vendor/components/jquery/jquery.min.js"></script>
        <script src="https://code.highcharts.com/highcharts.js"></script>
        <script src="https://code.highcharts.com/modules/exporting.js"></script>
        <script src="http://{{ realtime_url }}/socket.io/socket.io.js"></script>
        <script>
            var realtime_url = '{{ realtime_url }}';
        </script>
        <script src="/assets/js/realtime.js"></script>

    {% endblock %}
</head>
<body>
    {% block navbar %}
    <nav class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <a class="navbar-brand" href="#">Automate Everything</a>
            </div>
            <div id="navbar" class="navbar pull-left">
                <ul class="nav navbar-nav">
                    <li><a href="/redis">Redis Explorer</a></li>
                    <li><a href="/power">Power Consumption</a></li>
                </ul>
            </div>
            <div class="navbar pull-right ">
                <ul class="nav navbar-nav">
                    <li class="watts-counter"><a>{{ current_watts }} watts</a></li>
                </ul>
            </div>
        </div>
    </nav>
    {% endblock %}

    <div class="container">
        {% block errormessages %}
            {% for error in errors %}
                <div class="alert alert-danger" role="alert">
                    {{ error }}
                </div>
            {% endfor %}
        {% endblock %}
        <div id="content">{% block content %}{% endblock %}</div>
    </div> <!-- /container -->

    <div id="footer">

    </div>

    <footer class="footer">
        <div class="container">
            {% block footer %}
            <p class="text-muted">&copy; Copyleft Matthew Baggett</p>
            {% endblock %}
        </div>
    </footer>
</body>
</html>